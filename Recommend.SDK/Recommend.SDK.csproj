<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net48;netstandard2.0</TargetFrameworks>
    <PackageId>Recommend.SDK</PackageId>
    <Version>1.2</Version>
    <Authors>Recommend Inc.</Authors>
    <Company>Recommend Inc.</Company>
    <PackageLicenseExpression>(LGPL-2.0-only WITH FLTK-exception OR Apache-2.0+)</PackageLicenseExpression>
    <Title>Recommend API SDK</Title>
    <Description>Recommend API integration package</Description>
    <Summary>Package used for integration with Recommend, Inc. platform</Summary>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://www.recommend.co/developers</PackageProjectUrl>
    <RepositoryUrl>https://github.com/recommend-dev/RPD-net-sdk.git</RepositoryUrl>
    <PackageTags>recommend;rpd;recommendinc</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.Http.Json" Version="6.0.0" />
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
